class Solution {
    public boolean checkString(String s) {
        boolean sawA = false;

        for (int i = s.length()-1; i >= 0; i--)
        {
            if (s.charAt(i) == 'a')
            {
                sawA = true;
            }
            else if (s.charAt(i) == 'b' && sawA)
            {
                return false;
            }
        }

        return true;
    }
}