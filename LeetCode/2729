class Solution {
    public boolean isFascinating(int n) {
        int[] cnt = new int[10];

        for (int i = 1; i <= 3; i++) {
            int temp = n * i;
            while (temp > 0) {
                int d = temp % 10;
                if (d == 0 || cnt[d] == 1)
                    return false;
                cnt[d]++;
                temp /= 10;
            }
        }

        return true;
    }
}
